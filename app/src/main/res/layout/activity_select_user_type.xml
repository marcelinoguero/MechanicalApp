<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.MechanicalApp.FullscreenContainer"
    tools:context=".SelectUserTypeActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:id="@+id/user_type_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:text="Motorista"
                android:checked="true"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:background="@drawable/layout_bg"
                android:button="@drawable/radio_button_inset"
                android:buttonTint="@color/cardview_light_background"/>

            <RadioButton
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:text="Mecânico Autônomo"
                android:layout_marginTop="10dp"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:background="@drawable/layout_bg"
                android:button="@drawable/radio_button_inset"
                android:buttonTint="@color/cardview_light_background"/>

            <RadioButton
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:text="Estabelecimento de Mecânica"
                android:layout_marginTop="10dp"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:background="@drawable/layout_bg"
                android:button="@drawable/radio_button_inset"
                android:buttonTint="@color/cardview_light_background"/>
        </RadioGroup>

    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/user_type_options"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="60dp"
        android:text="NEXT"/>

</RelativeLayout>